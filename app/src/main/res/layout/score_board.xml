<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame">

    <TextView android:id="@+id/game_mode_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp" />

    <TextView android:id="@+id/score_board_clock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#212121"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <TextView android:id="@+id/score_board_correct"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/correct_mark"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark" />


        <TextView android:id="@+id/score_board_wrong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/wrong_mark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>
</RelativeLayout>